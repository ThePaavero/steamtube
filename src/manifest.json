{
	"name"             : "SteamTube",
	"version"          : "1.0",
	"manifest_version" : 2,
	"description"      : "Add a simple \"Search YouTube\" link to app page. Searches for \"[GAME TITLE] pc gameplay\".",
	"content_scripts"  : [
		{
			"matches" : ["http://store.steampowered.com/app/*"],
			"js"      : ["js/jquery.js", "js/SteamTube.js"]
		}
	],
	"permissions" : [
		"http://store.steampowered.com/"
	]
}